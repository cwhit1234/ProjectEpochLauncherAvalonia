<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
        x:Class="ProjectEpochLauncherAvalonia.MainWindow"
        Title="Project Epoch Launcher Avalonia"
		Icon="/Assets/icon.ico"
        Width="1200"
        Height="800">

	<Panel>
		<!-- Background Image -->
		<Image Source="/Assets/background.jpg"
               Stretch="UniformToFill"
               Opacity="0.8"/>

		<!-- Main Content Grid -->
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="250"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>

			<!-- Left Navigation Panel -->
			<Border Grid.Column="0"
                    Background="#CC1A1A2E"
                    BorderBrush="#3A3A4E"
                    BorderThickness="0,0,1,0">
				<Grid>
					<Grid.RowDefinitions>
						<RowDefinition Height="120"/>
						<RowDefinition Height="*"/>
						<RowDefinition Height="Auto"/>
					</Grid.RowDefinitions>

					<!-- Logo Container -->
					<Border Grid.Row="0"
                            Padding="20"
                            BorderBrush="#3A3A4E"
                            BorderThickness="0,0,0,1">
						<Image Source="/Assets/logo.png"
                               Stretch="Uniform"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"/>
					</Border>

					<!-- Navigation Menu -->
					<StackPanel Grid.Row="1"
                                Margin="0,20">
						<!-- Home Button -->
						<RadioButton x:Name="HomeButton"
                                     GroupName="Navigation"
                                     IsChecked="True"
                                     Classes="nav-button">
							<StackPanel Orientation="Horizontal" Spacing="15">
								<PathIcon Data="M 12 3 L 2 12 L 5 12 L 5 20 L 9 20 L 9 14 L 15 14 L 15 20 L 19 20 L 19 12 L 22 12 Z"
                                          Width="20"
                                          Height="20"/>
								<TextBlock Text="Home"
                                           VerticalAlignment="Center"
                                           FontSize="16"/>
							</StackPanel>
						</RadioButton>

						<!-- Settings Button -->
						<RadioButton x:Name="SettingsButton"
                                     GroupName="Navigation"
                                     Classes="nav-button">
							<StackPanel Orientation="Horizontal" Spacing="15">
								<PathIcon Data="M 12 8 A 4 4 0 0 0 8 12 A 4 4 0 0 0 12 16 A 4 4 0 0 0 16 12 A 4 4 0 0 0 12 8 M 12 10 A 2 2 0 0 1 14 12 A 2 2 0 0 1 12 14 A 2 2 0 0 1 10 12 A 2 2 0 0 1 12 10 M 10.73 3 L 13.27 3 L 13.72 5.56 Q 14.59 5.89 15.38 6.42 L 17.81 5.44 L 19.08 7.56 L 17.15 9.19 Q 17.25 9.77 17.25 10.35 Q 17.25 10.92 17.15 11.5 L 19.08 13.13 L 17.81 15.25 L 15.38 14.27 Q 14.59 14.8 13.72 15.13 L 13.27 17.69 L 10.73 17.69 L 10.28 15.13 Q 9.41 14.8 8.62 14.27 L 6.19 15.25 L 4.92 13.13 L 6.85 11.5 Q 6.75 10.92 6.75 10.35 Q 6.75 9.77 6.85 9.19 L 4.92 7.56 L 6.19 5.44 L 8.62 6.42 Q 9.41 5.89 10.28 5.56 Z"
                                          Width="20"
                                          Height="20"/>
								<TextBlock Text="Settings"
                                           VerticalAlignment="Center"
                                           FontSize="16"/>
							</StackPanel>
						</RadioButton>
					</StackPanel>

					<!-- Bottom Action Buttons -->
					<Border Grid.Row="2"
                            Padding="10"
                            BorderBrush="#3A3A4E"
                            BorderThickness="0,1,0,0">
						<Grid>
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="*"/>
								<ColumnDefinition Width="*"/>
							</Grid.ColumnDefinitions>

							<!-- Donate Button -->
							<Button x:Name="DonateButton"
                                    Grid.Column="0"
                                    Classes="action-button"
                                    Margin="0,0,5,0">
								<StackPanel Orientation="Horizontal" Spacing="10">
									<PathIcon Data="M 12 2 C 17.523 2 22 6.477 22 12 C 22 17.523 17.523 22 12 22 C 6.477 22 2 17.523 2 12 C 2 6.477 6.477 2 12 2 Z M 15.4 8 L 12 8 C 10.343 8 9 9.343 9 11 C 9 12.657 10.343 14 12 14 L 13 14 C 13.552 14 14 14.448 14 15 C 14 15.552 13.552 16 13 16 L 8.6 16 L 8.6 18 L 11 18 L 11 20 L 13 20 L 13 18 L 15 18 C 16.657 18 18 16.657 18 15 C 18 13.343 16.657 12 15 12 L 12 12 C 11.448 12 11 11.552 11 11 C 11 10.448 11.448 10 12 10 L 15.4 10 L 15.4 8 Z M 11 4 L 13 4 L 13 6 L 11 6 L 11 4 Z"
                                              Width="18"
                                              Height="18"/>
									<TextBlock Text="Donate"
                                               VerticalAlignment="Center"
                                               FontSize="14"/>
								</StackPanel>
							</Button>

							<!-- Discord Button -->
							<Button x:Name="DiscordButton"
                                    Grid.Column="1"
                                    Classes="action-button"
                                    Margin="5,0,0,0">
								<StackPanel Orientation="Horizontal" Spacing="10">
									<PathIcon Data="M 19.27 5.33 C 17.94 4.71 16.5 4.26 15 4 C 14.83 4.34 14.66 4.69 14.5 5.04 C 12.88 4.8 11.25 4.8 9.63 5.04 C 9.47 4.69 9.3 4.34 9.13 4 C 7.63 4.26 6.19 4.71 4.86 5.33 C 1.99 9.62 1.21 13.81 1.62 17.94 C 3.5 19.34 5.57 20.26 7.75 20.73 C 8.24 20.07 8.67 19.37 9.05 18.64 C 8.36 18.38 7.7 18.07 7.08 17.72 C 7.24 17.6 7.4 17.47 7.55 17.34 C 11.3 19.07 15.7 19.07 19.45 17.34 C 19.6 17.47 19.76 17.6 19.92 17.72 C 19.3 18.07 18.64 18.38 17.95 18.64 C 18.33 19.37 18.76 20.07 19.25 20.73 C 21.43 20.26 23.5 19.34 25.38 17.94 C 25.85 13.17 24.54 9.02 19.27 5.33 Z M 9.68 15.29 C 8.53 15.29 7.58 14.21 7.58 12.89 C 7.58 11.57 8.51 10.49 9.68 10.49 C 10.85 10.49 11.8 11.57 11.78 12.89 C 11.78 14.21 10.85 15.29 9.68 15.29 Z M 17.32 15.29 C 16.17 15.29 15.22 14.21 15.22 12.89 C 15.22 11.57 16.15 10.49 17.32 10.49 C 18.49 10.49 19.44 11.57 19.42 12.89 C 19.42 14.21 18.49 15.29 17.32 15.29 Z"
                                              Width="18"
                                              Height="18"/>
									<TextBlock Text="Discord"
                                               VerticalAlignment="Center"
                                               FontSize="14"/>
								</StackPanel>
							</Button>
						</Grid>
					</Border>
				</Grid>
			</Border>

			<!-- Content Area -->
			<Border Grid.Column="1"
                    Background="#CC16213E"
                    Margin="20"
                    CornerRadius="10"
                    Padding="30">
				<TransitioningContentControl x:Name="ContentArea">
					<TransitioningContentControl.PageTransition>
						<CrossFade Duration="0:00:00.3"/>
					</TransitioningContentControl.PageTransition>

					<!-- Default Home Content -->
					<Grid>
						<TextBlock Text="Welcome to Project Epoch"
                                   FontSize="32"
                                   FontWeight="Bold"
                                   Foreground="#F0E68C"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
					</Grid>
				</TransitioningContentControl>
			</Border>
		</Grid>
	</Panel>

	<Window.Styles>
		<!-- Navigation Button Style -->
		<Style Selector="RadioButton.nav-button">
			<Setter Property="Background" Value="Transparent"/>
			<Setter Property="Foreground" Value="#B0B0C0"/>
			<Setter Property="Padding" Value="20,15"/>
			<Setter Property="Margin" Value="10,2"/>
			<Setter Property="CornerRadius" Value="8"/>
			<Setter Property="Cursor" Value="Hand"/>
			<Setter Property="Template">
				<ControlTemplate>
					<Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{TemplateBinding CornerRadius}"
                            Padding="{TemplateBinding Padding}">
						<ContentPresenter Content="{TemplateBinding Content}"/>
					</Border>
				</ControlTemplate>
			</Setter>
		</Style>

		<Style Selector="RadioButton.nav-button:pointerover">
			<Setter Property="Background" Value="#33FFFFFF"/>
			<Setter Property="Foreground" Value="#F0E68C"/>
		</Style>

		<Style Selector="RadioButton.nav-button:checked">
			<Setter Property="Background" Value="#44F0E68C"/>
			<Setter Property="Foreground" Value="#F0E68C"/>
		</Style>

		<Style Selector="RadioButton.nav-button PathIcon">
			<Setter Property="Foreground" Value="{Binding $parent[RadioButton].Foreground}"/>
		</Style>

		<!-- Action Button Style (for Donate and Discord buttons) -->
		<Style Selector="Button.action-button">
			<Setter Property="Background" Value="Transparent"/>
			<Setter Property="Foreground" Value="#B0B0C0"/>
			<Setter Property="Padding" Value="15,12"/>
			<Setter Property="CornerRadius" Value="8"/>
			<Setter Property="Cursor" Value="Hand"/>
			<Setter Property="BorderThickness" Value="0"/>
			<Setter Property="HorizontalAlignment" Value="Stretch"/>
			<Setter Property="Template">
				<ControlTemplate>
					<Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{TemplateBinding CornerRadius}"
                            Padding="{TemplateBinding Padding}">
						<ContentPresenter Content="{TemplateBinding Content}"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
					</Border>
				</ControlTemplate>
			</Setter>
		</Style>

		<Style Selector="Button.action-button:pointerover">
			<Setter Property="Background" Value="#33FFFFFF"/>
			<Setter Property="Foreground" Value="#F0E68C"/>
		</Style>

		<Style Selector="Button.action-button PathIcon">
			<Setter Property="Foreground" Value="{Binding $parent[Button].Foreground}"/>
		</Style>
	</Window.Styles>
</Window>