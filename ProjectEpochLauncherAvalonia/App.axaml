<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="ProjectEpochLauncherAvalonia.App"
             xmlns:local="using:ProjectEpochLauncherAvalonia"
             xmlns:converters="using:ProjectEpochLauncherAvalonia.Converters"
             RequestedThemeVariant="Default">
	<!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

	<Application.DataTemplates>
		<local:ViewLocator/>
	</Application.DataTemplates>

	<Application.Styles>
		<FluentTheme />
	</Application.Styles>

	<Application.Resources>
		<!-- Global Value Converters -->
		<converters:BoolToColorConverter x:Key="BoolToColorConverter"/>
		<converters:BoolToInstallStatusConverter x:Key="BoolToInstallStatusConverter"/>
		<converters:BoolToSetupStatusConverter x:Key="BoolToSetupStatusConverter"/>
		<converters:BoolToSupportStatusConverter x:Key="BoolToSupportStatusConverter"/>
		<converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
		<converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
		<converters:SetupStepToContentConverter x:Key="SetupStepToContentConverter"/>
		<converters:ServerStatusToColorConverter x:Key="ServerStatusToColorConverter"/>
	</Application.Resources>
</Application>